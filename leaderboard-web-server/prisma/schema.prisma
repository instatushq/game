generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model scores {
  id        String   @id @default(cuid())
  name      String
  score     Int
  socialMediaUrl String @default("")
  socialMedia SocialMedia @default(X)
  createdAt DateTime @default(now())
}

enum SocialMedia {
  X
  INSTAGRAM
  TIKTOK
  YOUTUBE
  FACEBOOK
  TWITTER
  LINKEDIN
}